{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make",
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "'mingw32-make run'"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make run'"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make run'"
                ]
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "'mingw32-make clean'"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make clean'"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "'make clean'"
                ]
            }
        },
        {
            "label": "build wasm",
            "type": "shell",
            "windows": {
                "command": "emcc.bat",
                "args": [
                    "-I",
                    "${workspaceFolder}\\include",
                    "${workspaceFolder}\\src\\main.cpp",
                    "-o",
                    "${workspaceFolder}\\wasm\\main.wasm",
                    "-O3",
                    "-s",
                    "WASM=1",
                    "--no-entry",  // 不编译main函数
                    "-s",
                    "ALLOW_MEMORY_GROWTH=1"  // 可变内存
                ]
            },
            "problemMatcher": []
        }
    ]
}